{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "allowUmdGlobalAccess": true,
    "isolatedModules": true,
    "target": "ES2020",
    "module": "None",
    "strictNullChecks": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.cts",
    "src/**/*.mts"
  ],
  "exclude": [
    "**/*.spec.*",
    "build/**"
  ]
}
